<Window x:Class="DatesMgr.AlertSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إعدادات الإشعارات"  WindowStartupLocation="CenterScreen" ResizeMode="NoResize" FlowDirection="RightToLeft" Height="200" Width="250">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Margin="0,0,0,10" Text="التنبيه بالتواريخ القريبة قبل:"/>
            <CheckBox  x:Name="chkAlert90Days" Content="90 يوم" Margin="0,0,0,10"/>
            <CheckBox x:Name="chkAlert60Days" Content="60 يوم" Margin="0,0,0,10"/>
            <CheckBox x:Name="chkAlert30Days" Content="30 يوم" Margin="0,0,0,10"/>


            <Button  Margin="0,20,0,10" Width="120" Content="حفظ التعديلات" Click="SaveSettings_Click"/>
        </StackPanel>
    </Grid>
</Window>